<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#A1D6E2</item>
        <item name="colorPrimaryDark">#1995AD</item>
        <item name="colorAccent">#011A27</item>
        <item name="android:textColor">#011A27</item>
    </style>
    <style name="tabStyle" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tabMode">scrollable</item>
        <item name="tabSelectedTextColor">#F1F1F2</item>
        <item name="tabIndicatorColor">#F1F1F2</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#1995AD</item>
    </style>

</resources>
